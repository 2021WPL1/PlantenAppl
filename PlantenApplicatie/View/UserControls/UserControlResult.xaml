<UserControl x:Class="PlantenApplicatie.View.UserControls.UserControlResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlantenApplicatie.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1250">
    <Grid>
        <ListBox x:Name="lstResultSearch" Margin="42,184,696,42" Visibility="Visible" Background="#99FFFFFF" FontWeight="Bold" FontSize="14"
                 ItemsSource="{Binding listboxDetails}" 
                 SelectedItem="{Binding SelectedPlant, Mode=TwoWay}"
                 DisplayMemberPath="Name"/>
        <ListBox x:Name="lstDetails" Margin="673,184,50,50" Visibility="Visible" Background="#99FFFFFF" FontWeight="Bold" FontSize="14"/>
    </Grid>
</UserControl>
