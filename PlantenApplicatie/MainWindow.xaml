            <TextBox x:Name="txtSoort" Text="" TextWrapping="Wrap" Height="33" Canvas.Left="575" Canvas.Top="44" Width="150"/>
            <TextBox x:Name="txtCultivar" Text="" TextWrapping="Wrap" Height="32" Canvas.Left="730" Canvas.Top="45" Width="150"/>
            <TextBox x:Name="txtRatioBladBloei" Text="" TextWrapping="Wrap" Height="32" Canvas.Left="885" Canvas.Top="46" Width="150"/>
